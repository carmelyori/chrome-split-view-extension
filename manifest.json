{
  "manifest_version": 3,
  "name": "Split View Extension",
  "version": "1.0",
  "description": "Splits the browser window and loads two websites side by side.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*",
    "chrome-extension://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
